 {
	"manifest_version": 2,

	  "name": "ChatBot",
	  "description": "Access smartbot from inside of website",
	  "version": "1.1",

	  "browser_action": {
	    "default_icon": "icon.png"
	  },
	  "content_scripts": [
	  {
	    "matches": [
        "https://qa01-www.barclaycardus.com/*",
        "https://qa02-www.barclaycardus.com/*"
      ],
	    "js": ["js/jquery-2.2.3.min.js","js/content.js","js/intro.min.js"],
	    "css": ["css/main.css","css/introjs.min.css"]
	  }
      ],
      "background": {
		  "scripts": ["js/background.js"]
		},
	"permissions": [ 
 	  "tabs"
	]

}